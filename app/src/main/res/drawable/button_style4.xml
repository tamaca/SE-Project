<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 --><item>
    <shape>
        <solid android:color="@color/天依蓝" />
        <corners android:radius="10dp" />

    </shape>
</item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp">
        <shape>
            <gradient android:startColor="#FFFFFF" android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF" android:type="linear" android:angle="90"
                android:centerX="0.5" android:centerY="0.5" />

            <padding android:left="3dp" android:top="3dp" android:right="3dp"
                android:bottom="3dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="7dp" />
        </shape>
    </item>
</layer-list>