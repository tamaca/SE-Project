<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <solid android:color="@color/背景蓝" />
    </shape>
</item>

<item>
    <layer-list>
        <!-- 连框颜色值 -->
        <item>
            <shape>
                <solid android:color="@color/浅灰色" />
            </shape>
        </item>
        <!-- 主体背景颜色值 -->
        <item
            android:right="1dp"
            android:bottom="1dp">
            <shape>
                <solid android:color="@color/背景蓝" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>