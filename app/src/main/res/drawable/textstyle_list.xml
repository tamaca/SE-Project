<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/浅灰色" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/深灰色"/>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid android:color="@color/背景蓝"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>