<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@color/背景蓝">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:src="@drawable/head"
        android:onClick="toLoginActivity"
        android:visibility="gone"
        android:background="@color/背景蓝"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/user_options">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="我的图片"
                    android:textColor="@drawable/button_me_text"
                    android:id="@+id/button1"
                    android:onClick="toUserPageActivity"
                    android:drawableTop="@drawable/button_userpage"
                    android:background="@color/背景蓝"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ta的动态"
                    android:textColor="@drawable/button_me_text"
                    android:id="@+id/button2"
                    android:drawableTop="@drawable/button_moments"
                    android:background="@color/背景蓝"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="修改密码"
                    android:textColor="@drawable/button_me_text"
                    android:id="@+id/change_password_button"
                    android:drawableTop="@drawable/re_password"
                    android:background="@color/背景蓝" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="关注的人"
                    android:textColor="@drawable/button_me_text"
                    android:id="@+id/my_concern_button"
                    android:drawableTop="@drawable/button_userlist"
                    android:background="@color/背景蓝" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="黑名单"
                    android:textColor="@drawable/button_me_text"
                    android:id="@+id/my_blacklist_button"
                    android:drawableTop="@drawable/button_blacklist"
                    android:background="@color/背景蓝"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:text="注销"
                    android:textColor="@drawable/button_me_text"
                    android:id="@+id/imageButton2"
                    android:background="@color/背景蓝"
                    android:drawableTop="@drawable/button_logout"
                    android:onClick="logout"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
